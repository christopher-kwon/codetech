<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <settings>
        <setting name="jdbcTypeForNull" value="NULL"/>
    </settings>

    <typeAliases>
        <typeAlias alias="menu-category" type="com.codetech.www.domain.MenuCategory"/>
        <typeAlias alias="user-info" type="com.codetech.www.domain.UserInfo"/>
        <typeAlias alias="user" type="com.codetech.www.domain.User"/>
        
        <!-- 2021-04-07 박인수 공지사항  -->
        <typeAlias alias="notice" type="com.codetech.www.domain.Notice"/>
    </typeAliases>

    <mappers>
        <!-- 2021-04-08 박인수 notice.xml의 내용을 admin.xml에 통합  -->
        <mapper resource="sql/admin.xml"/>
        <mapper resource="sql/menu-category.xml"/>
        <mapper resource="sql/users.xml"/>
    </mappers>
</configuration>
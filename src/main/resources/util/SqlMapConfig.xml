<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <settings>
        <setting name="jdbcTypeForNull" value="NULL"/>
    </settings>

    <typeAliases>
        <typeAlias alias="store" type="com.codetech.www.domain.Store"/>
        <typeAlias alias="storemap" type="com.codetech.www.domain.StoreMap"/>
        <typeAlias alias="menu" type="com.codetech.www.domain.Menu"/>
        <typeAlias alias="order" type="com.codetech.www.domain.Order"/>
        <typeAlias alias="order-detail" type="com.codetech.www.domain.OrderDetail"/>
        <typeAlias alias="user" type="com.codetech.www.domain.User"/>
        <typeAlias alias="staff" type="com.codetech.www.domain.Staff"/>
        <typeAlias alias="comment" type="com.codetech.www.domain.Comment"/>
        <typeAlias alias="cart" type="com.codetech.www.domain.Cart"/>

        <typeAlias alias="notice" type="com.codetech.www.domain.Notice"/>
        <typeAlias alias="menu-category" type="com.codetech.www.domain.MenuCategory"/>
        <typeAlias alias="user-info" type="com.codetech.www.domain.UserInfo"/>
        <typeAlias alias="upi" type="com.codetech.www.domain.UserPlusInfo"/>
        <typeAlias alias="report" type="com.codetech.www.domain.Report"/>
        <typeAlias alias="sil" type="com.codetech.www.domain.StoreInfoList"/>
        <typeAlias alias="customer" type="com.codetech.www.domain.Customer"/>
        <typeAlias alias="profit" type="com.codetech.www.domain.Profit"/>
        <typeAlias alias="order-status" type="com.codetech.www.domain.OrderStatus"/>
        <typeAlias alias="detail-menu-join" type="com.codetech.www.domain.DetailMenuJoin"/>
    </typeAliases>

    <mappers>
        <mapper resource="sql/store.xml"/>
        <mapper resource="sql/menu.xml"/>
        <mapper resource="sql/order.xml"/>
        <mapper resource="sql/staff.xml"/>
        <mapper resource="sql/comment.xml"/>
        <mapper resource="sql/menu-category.xml"/>
        <mapper resource="sql/users.xml"/>
        <mapper resource="sql/admin.xml"/>
    </mappers>
</configuration>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <settings>
        <setting name="jdbcTypeForNull" value="NULL"/>
    </settings>

    <typeAliases>
        <typeAlias alias="store" type="com.codetech.www.domain.Store"/>
        <typeAlias alias="menu" type="com.codetech.www.domain.Menu"/>
        <typeAlias alias="order" type="com.codetech.www.domain.Order"/>
        <typeAlias alias="user" type="com.codetech.www.domain.User"/>
        <typeAlias alias="menu-category" type="com.codetech.www.domain.MenuCategory"/>
        <typeAlias alias="user" type="com.codetech.www.domain.User"/>
        <typeAlias alias="user-info" type="com.codetech.www.domain.UserInfo"/>
    </typeAliases>

    <mappers>
        <mapper resource="sql/store.xml"/>
        <mapper resource="sql/menu.xml"/>
        <mapper resource="sql/order.xml"/>
        <mapper resource="sql/user.xml"/>
        <mapper resource="sql/menu-category.xml"/>
        <mapper resource="sql/users.xml"/>
    </mappers>
</configuration>